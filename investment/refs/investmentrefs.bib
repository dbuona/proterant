	journal = {Evolutionary Ecology},
	number = {4},
	pages = {435--446},
	title = {Foliage affects colour preference in bumblebees (Bombus impatiens): a test in a three-dimensional artificial environment},
	ty = {JOUR},
	url = {https://doi.org/10.1007/s10682-017-9893-4},
	volume = {31},
